{
  "name": "quantumweasel",
  "version": "1.0.0",
  "description": "Quantum Mechanics in Typescript.",
  "author": "",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sneakyweasel/quantumweasel"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.132",
    "@types/mathjs": "^5.0.1"
  },
  "scripts": {
