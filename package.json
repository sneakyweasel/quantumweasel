{
  "name": "quantumweasel",
  "version": "1.0.0",
  "description": "Quantum Mechanics in Typescript",
  "author": "sneakyweasel",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/sneakyweasel/quantumweasel"
  },
  "scripts": {
    "test": "tsc --noEmit -p . && jest --no-cache",
    "lint": "tsc --noEmit -p . && tslint \"*.ts?(x)\"",
    "lintci": "tslint \"*.ts?(x)\" --force",
    "mirror": "tsc --outDir ./build && node ./build/mirror.js",
    "start": "tsc --outDir ./build && node ./build/beamsplitter.js",
    "build": "tsc --pretty --outDir ./build"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.138",
    "@types/mathjs": "^5.0.1",
    "ts-jest": "^21.1.3",
    "tslint": "^5.8.0",
    "jest": "^21.2.1",
    "ts-node": "^8.3.0"
  },
  "dependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "lodash": "^4.17.15",
    "mathjs": "^5.10.3",
    "typescript": "^3.4.5",
    "vuedraggable": "^2.23.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}