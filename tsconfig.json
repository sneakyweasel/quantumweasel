{
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "node",
        "lib": [
            "es2019",
            "dom"
        ],
        "typeRoots" : ["./src/types/quantum-tensors", "./node_modules/@types/"],
        "types": ["jest"],
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "outDir": "./build",
        "allowSyntheticDefaultImports": true
        // "module": "amd",
        // "outFile": "./build/quantumweasel.js"
    },
    "include": [
        "src/*"
    ],
    "compileOnSave": true
}