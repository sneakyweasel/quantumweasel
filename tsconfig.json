{
    "compilerOptions": { 
        "target": "es2017",
        "moduleResolution": "node",
        "lib": ["es2019", "dom"],
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "noFallthroughCasesInSwitch":true,
        "noImplicitThis":true,
        "noImplicitReturns":true,
        "sourceMap": true,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "outDir": "./build"
        // "module": "amd",
        // "outFile": "./build/quantumweasel.js"
        // "types" : ["lodash", "mathjs"]
    },
    "compileOnSave": true
}
