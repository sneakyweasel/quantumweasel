{
    "compilerOptions": { 
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "noFallthroughCasesInSwitch":true,
        "noImplicitThis":true,
        "noImplicitReturns":true,
        "sourceMap": true,
        "noEmitOnError": true,
        "outDir": "./build",
        // "types" : ["lodash", "mathjs"]
    },
    "compileOnSave": true
}
